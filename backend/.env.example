# Label Verification Backend Configuration

# Debug mode (set to true for development)
DEBUG=false

# CORS - Allowed frontend origins (comma-separated for multiple)
# CORS_ORIGINS=["https://your-frontend.azurestaticapps.net","http://localhost:5173"]

# Image processing limits
MAX_IMAGE_SIZE_MB=3
MAX_IMAGE_WIDTH=1500

# OCR settings
OCR_LANG=en

# Vision Assist (optional cloud fallback)
VISION_ASSIST_ENABLED=false
OPENAI_API_KEY=sk-your-key-here

# Verification thresholds
BRAND_MATCH_THRESHOLD=0.95
BRAND_REVIEW_THRESHOLD=0.85
OCR_CONFIDENCE_THRESHOLD=0.75
ABV_TOLERANCE=0.5

# Batch processing
MAX_BATCH_SIZE=300
MAX_WORKERS=4
