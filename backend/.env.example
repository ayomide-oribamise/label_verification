# Label Verification Backend Configuration

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS - Allowed origins (use * for all, or specific URLs)
CORS_ORIGINS=*

# Image processing
MAX_UPLOAD_SIZE_MB=15
IMAGE_MAX_DIMENSION=1600

# OCR settings
OCR_MAX_CONCURRENT=1

# Verification thresholds
BRAND_MATCH_THRESHOLD=0.85
BRAND_REVIEW_THRESHOLD=0.70
ABV_TOLERANCE=0.5
NET_CONTENTS_TOLERANCE=5.0

# Batch processing
MAX_WORKERS=1
